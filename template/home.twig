{% extends 'todoList.twig' %}
{% block content %}
    {#hello twig#}
    {#{{ data['name'] }}#}

    <style>
        .allForms {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: row;

        }

        .formGroup{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin: 8px;
        }

        .background {
            height: 100%;
            width: 100%;
            position: absolute;
            background-color: #21D4FD;
            /*background-image: linear-gradient(19deg, #21D4FD 0%, #B721FF 100%);*/
            background-image: url("https://www.buy-backdrop.com/bmz_cache/6/690e81f29ed7f06fe4fe501b1eed3773.image.752x691.jpg");
            filter: blur(5px);
        }

        .authForm {
            z-index: 100;
            display: flex;
            justify-content: center;
            align-items: start;
            flex-direction: column;
            padding: 24px;
            border-radius: 5px;
            background: dodgerblue;
            /*box-shadow: rgba(255, 255, 255, 0.6) 3px 3px 5px;*/
            font-family: "Candara Light";
        }

        .authForm * {
            margin: 4px;
            border: 0px;
            border-radius: 2px;
        }

        .authForm input {
            min-height: 24px;
            padding: 4px;
        }

        .authForm input:focus {
            border: 1px solid #f0f0f0;
        }

        .authForm input[type='submit'] {
            background-color: #1e90f0;
            border: 1px solid #1e90f0;
            padding: 8px;
            margin-top: 18px;
            min-width: 70%;
            align-self: center;
        }
    </style>
    {#<div class="background"></div>#}
    {% if message %}
        {{ message }}
    {% endif %}
    <main class="allForms">
        <div class="formGroup">
            <h1>Login Form</h1>
            <form id="loginForm" class="loginForm authForm" method="post" action="{{ path_for('login') }}">
                <label for="loginUserId">User Id</label>
                <input name="loginUserId" id="loginUserId" type="text">
                <label for="loginPassword">Password</label>
                <input name="loginPassword" id="loginPassword" type="password">
                <input type="submit" value="Login">
                    {{ csrf.field | raw }}
            </form>
        </div>

        <div class="formGroup">
            <h1>Signup Form</h1>
            <form id="signupForm" class="signupForm authForm" method="post" action="{{ path_for('signup') }}">
                <label for="signupUserId">User Id</label>
                <input name="signupUserId" id="signupUserId" type="text">
                <label for="signupPassword">Password</label>
                <input name="signupPassword" id="signupPassword" type="password">
                <input type="submit" value="Sign Up">
                    {{ csrf.field | raw }}
            </form>
        </div>
    </main>
{% endblock %}