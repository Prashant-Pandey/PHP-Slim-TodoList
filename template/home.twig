{% extends 'todoList.twig' %}
{% block css %}
    <link href="{{ base_url() }}/static/css/homeStyle.css" rel="stylesheet">
{% endblock %}
{% block content %}
    {#<div class="background"></div>#}
    {% if message %}
        {{ message }}
    {% endif %}
    <div class="row flex-row flex-md-row flex-sm-column justify-content-center">
        <div class="formGroup card p-3">
            <h1>Login Form</h1>
            <form id="loginForm" class="loginForm authForm" method="post" action="{{ path_for('login') }}">
                <div class="form-group">
                    <label for="loginUserId">User Id</label>
                    <input name="loginUserId" class="form-control" id="loginUserId" type="email">
                </div>
                <div class="form-group">
                    <label for="loginPassword">Password</label>
                    <input name="loginPassword" class="form-control"  id="loginPassword" type="password">
                </div>
                <input class="btn btn-primary pl-5 pr-5 mt-3" type="submit" value="Login">
            </form>
        </div>

        <div class="formGroup card p-3">
            <h1>Signup Form</h1>
            <form id="signupForm" class="signupForm authForm" method="post" action="{{ path_for('signup') }}">
                <div class="form-group">
                    <label for="signupUserId">User Id</label>
                    <input name="signupUserId" class="form-control" id="signupUserId" type="email">
                </div>
                <div class="form-group">
                    <label for="signupPassword">Password</label>
                    <input name="signupPassword" class="form-control" id="signupPassword" type="password">
                </div>
                <input class="btn btn-primary pl-5 pr-5 mt-3" type="submit" value="Sign Up">
            </form>
        </div>
    </div>
{% endblock %}

{% block scripts %}
{% endblock %}